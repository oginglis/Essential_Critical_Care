<div class="center-list">
  <ul class="home-page-center-links">
    <% @navlinks.each do |f|  %>
      <%= link_to  navbar_base_folder_path(f), class: "remove-link-easy" do%>
        <div class="show-cat-box-home">
          <p class="easy-link-title"><%=  f.title %></p>
          <%= icon('fas', 'arrow-right') %>
        </div>
      <% end %>
    <% end %>
    <%= link_to  about_path, class: "remove-link-easy" do%>
        <div class="show-cat-box-home">
          <p class="easy-link-title"><%=  t('home.about_link') %></p>
          <%= icon('fas', 'arrow-right') %>
        </div>
    <% end %>
    <%= link_to  contact_path, class: "remove-link-easy" do%>
        <div class="show-cat-box-home">
          <p class="easy-link-title"><%=  t('home.contact_link') %></p>
          <%= icon('fas', 'arrow-right') %>
        </div>
    <% end %>
  </ul>
</div>


