<div class="global-content-wrap">
  <div class="sub-navbar">
    <div class="left-links-sub-nav">
      <%= icon('fas', 'less-than') %>
      <span class="subnav-safety-wrap">
        <%= link_to "#{t('home.subnav_backto')} #{@sub_category.category.title}", category_path(@sub_category.category), class: "sub-nav-home-text" %>
      </span>
    </div>
    <%= icon('fas', 'bars') %>
  </div>

  <div class="category-image-banner"  loading="lazy" style="background-image: url(<%= cl_image_path(@sub_category.category.navbar_base_folder.banner.key,  quality: "auto", :crop => :fill, :fetch_format=>:auto)  %>)">
  </div>
  <div class="home-page-body-container">
    <%= link_to @sub_category.category.title, category_path(@sub_category.category), class: "sub-category-parent-title" %>
    <h1 class="sub-category-show-title"><%= @sub_category.title %></h1>
    <p class="sub-category-updated-info"><%= @sub_category.created_at %></p>
    <p class="sub-category-show-description"><%= @sub_category.description %></p>
    <%= render partial: "render_resources", locals: { resources: @all_resources } %>
  </div>
</div>
