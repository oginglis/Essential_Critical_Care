<div class="global-content-wrap">
  <div class="sub-navbar">
    <div class="left-links-sub-nav">
      <%= icon('fas', 'less-than') %>
      <span class="subnav-safety-wrap">
        <%= link_to "#{t('home.subnav_backto')} #{@secret_sub_category.secret_category.title}", secret_category_path(@secret_sub_category.secret_category), class: "sub-nav-home-text" %>
      </span>
    </div>
    <%= icon('fas', 'bars') %>
  </div>
  <div class="category-image-banner"  loading="lazy" style="background-image: url(<%= cl_image_path(@secret_sub_category.secret_category.secret_navbar_base_folder.banner.key,  quality: "auto", :crop => :fill, :fetch_format=>:auto)  %>)">
  </div>
  <div class="home-page-body-container">
    <%= link_to @secret_sub_category.secret_category.title, secret_category_path(@secret_sub_category.secret_category), class: "sub-category-parent-title"  %>
    <h1 class="sub-category-show-title"><%= @secret_sub_category.title %></h1>
    <p class="sub-category-updated-info"><%= @secret_sub_category.created_at %></p>
    <p class="sub-category-show-description"><%= @secret_sub_category.description %></p>
    <%= render partial: "render_resources", locals: { resources: @all_resources } %>
  </div>
</div>
